{
  "name": "aias",
  "version": "1.0.0",
  "description": "An AI assistant with memory and autonomous actions for Discord and multi-platform support",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:manual": "tsx scripts/test-aias.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yoshikouki/aias.git"
  },
  "keywords": [
    "ai",
    "discord",
    "bot",
    "mastra",
    "memory",
    "autonomous",
    "assistant"
  ],
  "author": "yoshikouki",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yoshikouki/aias/issues"
  },
  "homepage": "https://github.com/yoshikouki/aias#readme",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@ai-sdk/google": "^1.2.22",
    "@mastra/core": "^0.10.10",
    "@mastra/fastembed": "^0.10.0",
    "@mastra/libsql": "^0.11.0",
    "@mastra/memory": "^0.11.1",
    "ai": "^4.3.16",
    "better-sqlite3": "^12.2.0",
    "discord.js": "^14.21.0",
    "dotenv": "^17.0.1",
    "zod": "^3.25.71"
  }
}
